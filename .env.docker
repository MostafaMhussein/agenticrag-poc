# Agentic RAG POC - Docker Environment Configuration
# Used when running inside Docker containers

# Database (connects to postgres container)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=rag_db
DB_USER=postgres
DB_PASSWORD=password
DATABASE_URL=postgresql://postgres:password@postgres:5432/rag_db

# Ollama (connects to host machine)
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_LLM_MODEL=gemma3:4b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
OLLAMA_CONTEXT_LENGTH=131072
OLLAMA_TEMPERATURE=0.1

# RAG Settings
CHUNK_SIZE=512
CHUNK_OVERLAP=50
EMBEDDING_DIMENSION=768
SIMILARITY_TOP_K=5
COLLECTION_NAME=document_embeddings

# Phoenix (connects to phoenix container)
PHOENIX_ENABLED=true
PHOENIX_HOST=phoenix
PHOENIX_PORT=6006
